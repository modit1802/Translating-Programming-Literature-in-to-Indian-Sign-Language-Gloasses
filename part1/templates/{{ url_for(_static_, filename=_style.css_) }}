}

/* Keyframes for the typing animation */
@keyframes typing {
    from {
        width: 0;
    }
    to {
        width: 100%;
    }
}

/* Keyframes for the blinking cursor animation */
@keyframes blink-caret {
    from, to {
        border-color: transparent;
    }
}
